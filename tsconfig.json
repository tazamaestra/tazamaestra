      {
        "compilerOptions": {
          "target": "ES2020",
          "module": "ESNext",
          "moduleResolution": "node",
          "esModuleInterop": true,
          "forceConsistentCasingInFileNames": true,
          "strict": true,
          "skipLibCheck": true,
          "outDir": "dist",
          "rootDir": ".",
          "allowJs": true,
          "resolveJsonModule": true,
          "baseUrl": ".",

          "paths": {
            "*": ["src/*"]
          },
          "lib": ["ES2020", "DOM"],
          "jsx": "react-jsx"
        },
        "include": [
          "src/**/*.ts",
          "src/**/*.tsx",
          "src/**/*.js",
          "*.js",
          "*.ts"
        ],
        "exclude": ["node_modules", "dist"]
      }
